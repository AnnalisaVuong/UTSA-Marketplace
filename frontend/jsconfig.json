{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"],
      "@style/*": ["style/*"]
    },
    "types": ["node"],
    "checkJs": true,
    "strictNullChecks": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
